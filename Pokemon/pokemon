--Code
  --Intro
 clear()
 term.setCursorPos(20,5)
 textutils.slowPrint("Pokemon "..Ver)
 term.setCursorPos(1,1)
 print("Press Q to quit.")
 sleep(3)
 clear()
 local c = "n"
 while c == "n" do
   clear()
   term.setCursorPos(18,8)
   textutils.slowWrite("What is your name? ")
   name = read()
   sleep(1)
   clear()
   term.setCursorPos(17,8)
   write("Your name is "..name.."? y/n ")
   local c
   while true do
     evt, c = os.pullEvent("char")
     c = string.lower(c)
     if c == "y" then
       break
     elseif c == "n" then
       break
     end
   end
   if c == "y" then
     break
   end    
 end 
 
 
 clear()
 
 term.setCursorPos(20,10)
 
 print("Nice to meet you "..name)
 sleep(2)
 clear()
 term.setCursorPos(20,9)
 print("Lets catch some Pokemons!")
 sleep(2)
 IntroPlayed = true
 
 if IntroPlayed == true then
 else error("Intro not played")
 end
--Game
while true do
  lvlup()
  lvlcp()
  exit()
  clear()
  mainscreen() 
  
end


  
  
  

  
    
