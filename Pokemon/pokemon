--Powerlevel
function lvlcp() 
  if lvl == 1 then
    cp = math.random(10,20)
  elseif lvl == 2 then
    cp = math.random(20,40)
  elseif lvl == 3 then 
    cp = math.random(40,70)
  elseif lvl == 4 then
    cp = math.random(70,100)
  elseif lvl == 5 then
    cp = math.random(70,100)
  elseif lvl == 6 then
    cp = math.random(90,120)
  else
    print("lvl invalid...")
  end
end

function levelup()
  if xp > levelupxp then
  clear()
  xp = 0
  term.setCursorPos(20,5)
  lvl = lvl+1
  textutils.slowPrint("You are now level: "..lvl)
  lvlcp()
  end
end
  



